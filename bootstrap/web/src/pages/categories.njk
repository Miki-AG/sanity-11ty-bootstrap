---
layout: base.njk
permalink: "/blog/categories/index.html"
eleventyComputed: { title: "Categories" }
---
{% if globals and globals.header %}
  {% set headerContext = globals.header %}
  {% include "header.njk" %}
  {% set headerContext = null %}
{% endif %}
<section class="container my-4">
  <h1 class="display-5">Categories</h1>
  {% if categories and (categories | length) > 0 %}
    <ul class="list-group list-group-flush">
      {% for c in categories %}
        {% set count = (categoryPosts[c.slug] and (categoryPosts[c.slug] | length)) or 0 %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <a href="/blog/category/{{ c.slug | url }}/" class="stretched-link text-decoration-none">{{ c.title }}</a>
          <span class="badge text-bg-secondary rounded-pill">{{ count }}</span>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p class="text-body-secondary">No categories.</p>
  {% endif %}

  <div class="mt-4">
    <a href="/blog/" class="btn btn-outline-secondary btn-sm">‚Üê Back to Blog</a>
  </div>
</section>
