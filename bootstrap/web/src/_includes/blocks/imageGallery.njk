{# Image Gallery: horizontal equal images on desktop, stacked on mobile #}
<section class="container my-5">
  {% if block.images and (block.images | length) > 0 %}
    <div class="d-flex flex-column flex-md-row gap-3">
      {% for it in block.images %}
        <div class="flex-fill">
          {% if it.imageUrl %}
            <img src="{{ it.imageUrl }}" alt="{{ it.alt or '' }}" class="img-fluid rounded-2 w-100 d-block">
          {% else %}
            <svg class="rounded-2 w-100 d-block" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 9" preserveAspectRatio="xMidYMid slice" style="background:#e9ecef;">
              <rect width="100%" height="100%" fill="#e9ecef"></rect>
            </svg>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="alert alert-warning mb-0">No images configured.</div>
  {% endif %}
</section>

