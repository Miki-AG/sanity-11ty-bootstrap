{# Quotes block: title (alignable), quotes left, image right #}
{% set align = block.titleAlign or 'left' %}
{% set titleClass = '' %}
{% if align == 'center' %}{% set titleClass = 'text-center' %}{% elseif align == 'right' %}{% set titleClass = 'text-end' %}{% endif %}

<section class="container my-5">
  {% if block.title %}
    <h2 class="mb-4 {{ titleClass }}">{{ block.title }}</h2>
  {% endif %}

  <div class="row g-4 align-items-center">
    <div class="col-md-7 order-md-1">
      {% if block.items and (block.items | length) > 0 %}
        {% for item in block.items %}
          <figure class="mb-4">
            {% if item.quote %}
              <blockquote class="blockquote">
                <p class="mb-1">{{ item.quote }}</p>
              </blockquote>
            {% endif %}
            {% if item.author %}
              <figcaption class="blockquote-footer">{{ item.author }}</figcaption>
            {% endif %}
          </figure>
        {% endfor %}
      {% else %}
        <div class="alert alert-warning">No quotes configured.</div>
      {% endif %}
    </div>
    <div class="col-md-5 order-md-2">
      {% if block.bgUrl %}
        <img src="{{ block.bgUrl }}" class="img-fluid rounded" alt="{{ block.imageAlt or '' }}">
      {% else %}
        <div class="alert alert-warning" role="alert">[missing image]</div>
      {% endif %}
    </div>
  </div>
</section>
